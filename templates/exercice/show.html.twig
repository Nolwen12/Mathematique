{% extends 'base.html.twig' %}

{% block title %}Exercice{% endblock %}

{% block body %}
    <h1>Exercice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exercice.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ exercice.nom }}</td>
            </tr>
            <tr>
                <th>Contenue</th>
                <td><a href="{{ asset('uploads/Contenue/' ~ exercice.Contenue) }}">Voir l exercice</a></td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ exercice.date ? exercice.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Chapitre</th>
                <td><a href="{{ asset('uploads/Contenue/' ~ exercice.chapitre.Contenue) }}">Voir le chapitre</a></td>
            </tr>
            <tr>
                <th>Correction</th>
                <td><a href="{{ asset('uploads/Contenue/' ~ exercice.correction.Contenue) }}">Voir la correction</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_exercice_index') }}">back to list</a>

    <a href="{{ path('app_exercice_edit', {'id': exercice.id}) }}">edit</a>

    {{ include('exercice/_delete_form.html.twig') }}
